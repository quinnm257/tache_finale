<%= form_with(model: customer) do |form| %>
  <% if customer.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
        <% customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :customer_name, style: "display: block" %>
    <%= form.textarea :customer_name %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.textarea :email %>
  </div>

  <div>
    <%= form.label :phone, style: "display: block" %>
    <%= form.textarea :phone %>
  </div>

  <div>
    <%= form.label :delivery_address, style: "display: block" %>
    <%= form.textarea :delivery_address %>
  </div>

  <div>
    <%= form.label :country_id, style: "display: block" %>
    <%= form.collection_select :country_id,
                  @countries,
                  :id,
                  :country_name,
                  prompt: "Select a country" %>  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
