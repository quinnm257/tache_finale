<p style="color: green"><%= notice %></p>

<% content_for :title, "Categories" %>

<h1>Categories</h1>

<div id="categories">
  <% @categories.each do |category| %>
    <%= render category %>
    <p>
      <% if policy(category).show? %>
        <%= link_to "Show", category_path(category), class: "adminbutton" %>
      <% end %>
      <%= link_to "Show instruments in this category", instruments_path(category_id: category.id), class: "button" %>
    </p>
    <hr>
  <% end %>

</div>

<% if policy(@categories).create? %>
  <%= link_to "New category", new_category_path, class: "adminbutton" %>
<% end %>

