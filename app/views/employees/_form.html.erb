<%= form_with(model: employee) do |form| %>
  <% if employee.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
        <% employee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :employee_name, style: "display: block" %>
    <%= form.textarea :employee_name %>
  </div>

  <div>
    <%= form.label :store_id, style: "display: block" %>
    <%= form.collection_select :store_id,
                  @stores,
                  :id,
                  :store_name,
                  prompt: "Select a store" %>  </div>

  <div>
    <%= form.label :position, style: "display: block" %>
    <%= form.text_field :position %>
  </div>

  <div>
    <%= form.label :hire_date, style: "display: block" %>
    <%= form.date_field :hire_date %>
  </div>

  <div>
    <%= form.label :birth_date, style: "display: block" %>
    <%= form.date_field :birth_date %>
  </div>

  <div>
    <%= form.label :phone, style: "display: block" %>
    <%= form.textarea :phone %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.textarea :email %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
