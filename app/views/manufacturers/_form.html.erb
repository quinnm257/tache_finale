    <%= form.label :country_id, style: "display: block" %>
    <%= form.collection_select :country_id,
                  @countries,
                  :id,
                  :country_name,
                  prompt: "Select a country" %>  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.textarea :email %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
