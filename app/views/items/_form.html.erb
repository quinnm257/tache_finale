<%= form_with(model: item) do |form| %>
  <% if item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :instrument_id, style: "display: block" %>
    <%= form.collection_select :instrument_id,
                  @instruments,
                  :id,
                  :instrument_name,
                  prompt: "Select an instrument" %>  </div>

  <div>
    <%= form.label :model, style: "display: block" %>
    <%= form.textarea :model %>
  </div>

  <div>
    <%= form.label :manufacturer_id, style: "display: block" %>
    <%= form.collection_select :manufacturer_id,
                  @manufacturers,
                  :id,
                  :manufacturer_name,
                  prompt: "Select a manufacturer" %>  </div>

  <div>
    <%= form.label :serial_number, style: "display: block" %>
    <%= form.textarea :serial_number %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.textarea :description %>
  </div>

  <div>
    <%= form.label :condition, style: "display: block" %>
    <%= form.textarea :condition %>
  </div>

  <div>
    <%= form.label :production_year, style: "display: block" %>
    <%= form.number_field :production_year %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div class="field">
  <% if item.image.attached? %>
    <%= image_tag item.image, style: "width: 200px; display: block" %>
  <% end %>

  <%= form.label :image %>
  <%= form.file_field :image %>
  </div>


  <div>
    <%= form.submit %>
  </div>
<% end %>
